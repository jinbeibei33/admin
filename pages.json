{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [
		//pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/tabbar/tabbar-1/home/home",
			"style": {
				"navigationBarTitleText": "页签1"
			}
		}, {
			"path": "pages/tabbar/tabbar-2/tabbar-2/tabbar-2",
			"style": {
				"navigationBarTitleText": "页签2"
			}
		}, {
			"path": "pages/tabbar/tabbar-3/tabbar-3/tabbar-3",
			"style": {
				"navigationBarTitleText": "页签3"
			}
		}, {
			"path": "pages/tabbar/tabbar-4/tabbar-4/tabbar-4",
			"style": {
				"navigationBarTitleText": "页签4"
			}
		}
	],
	"globalStyle": {
		"mp-alipay": {
			/* 支付宝小程序特有相关 */
			"transparentTitle": "always",
			"allowsBounceVertical": "NO"
		},
		"navigationBarBackgroundColor": "#CC3031",
		"navigationBarTitleText": "",
		"navigationBarTextStyle": "white",
		"app-plus": {
			"scrollIndicator": "none" //全局 在APP页面都不显示滚动条
		}
	},
	"tabBar": {
		"borderStyle": "black",
		"backgroundColor": "#FFFFFF",
		"color": "#262626",
		"fontSize": "10px",
		"iconWidth": "19px",
		"selectedColor": "#CC3031",
		"list": [{
				"pagePath": "pages/tabbar/tabbar-1/home/home",
				"iconPath": "static/img/tabbar/tab-bar-home.png",
				"selectedIconPath": "static/img/tabbar/tab-bar-home-active.png",
				"text": "一"
			},
			{
				"pagePath": "pages/tabbar/tabbar-2/tabbar-2/tabbar-2",
				"iconPath": "static/img/tabbar/tab-bar-voice.png",
				"selectedIconPath": "static/img/tabbar/tab-bar-voice-active.png",
				"text": "二"
			},
			{
				"pagePath": "pages/tabbar/tabbar-3/tabbar-3/tabbar-3",
				"iconPath": "static/img/tabbar/tab-bar-meetting.png",
				"selectedIconPath": "static/img/tabbar/tab-bar-meetting-active.png",
				"text": "三"
			},
			{
				"pagePath": "pages/tabbar/tabbar-4/tabbar-4/tabbar-4",
				"iconPath": "static/img/tabbar/tab-bar-mine.png",
				"selectedIconPath": "static/img/tabbar/tab-bar-mine-active.png",
				"text": "四"
			}
		]
	}
}
